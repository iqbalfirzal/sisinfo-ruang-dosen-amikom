<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- Top Shadow -->

    <item android:bottom="0px" android:top="0px" android:left="0px" android:right="0px">

        <shape android:shape="rectangle" >

            <gradient
                android:startColor="#B41B1B1B"
                android:centerColor="#B4333333"
                android:endColor="@android:color/transparent"
                android:angle="90"/>

            <corners android:topRightRadius="11dp" android:topLeftRadius="11dp" />

        </shape>

    </item>

    <!-- White Bottom color -->

    <item android:bottom="-10px" android:top="10px" android:left="0px" android:right="0px">

        <shape android:shape="rectangle" >

            <solid android:color="#FDFDFD" />

            <corners android:topRightRadius="11dp" android:topLeftRadius="11dp" />

        </shape>

    </item>

</layer-list>